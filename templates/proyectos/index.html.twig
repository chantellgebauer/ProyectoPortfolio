{% extends 'base.html.twig' %}

{% block title %}Proyectos index{% endblock %}

{% block body %}
    <h1>Proyectos index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Fecha</th>
                <th>Lenguajes</th>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for proyecto in proyectos %}
            <tr>
                <td>{{ proyecto.id }}</td>
                <td>{{ proyecto.nombre }}</td>
                <td>{{ proyecto.fecha ? proyecto.fecha|date('Y-m-d') : '' }}</td>
                <td>{{ proyecto.lenguajes }}</td>
                <td>{{ proyecto.descripcion }}</td>
                <td>
                    <a href="{{ path('app_proyectos_show', {'id': proyecto.id}) }}">show</a>
                    <a href="{{ path('app_proyectos_edit', {'id': proyecto.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_proyectos_new') }}">Create new</a>
{% endblock %}
